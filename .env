# Core
SYMBOLS=BTC/USD,ETH/USD,XRP/USD,DOGE/USD,TSLA,AMD,SPY
REFRESH_SECONDS=60
USE_FINBERT=true

# Weights (0..1, must sum to ~1)
WEIGHT_NEWS=0.5
WEIGHT_SOCIAL=0.3
WEIGHT_FEAR_GREED=0.2

# Data sources (toggle on/off)
ENABLE_STOCKTWITS=true
ENABLE_REDDIT=false            # set true if you add Reddit creds below
RSS_FEEDS=https://www.reuters.com/finance/markets/rss,https://finance.yahoo.com/news/rss,https://www.coindesk.com/arc/outboundfeeds/rss/

# Reddit (optional)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=sentiment-hub/1.0

# MySQL logging (optional)
MYSQL_URI=mysql+pymysql://user:pass@host:3306/sentiment

# Pushover (optional alerts)
PUSHOVER_USER_KEY=
PUSHOVER_API_TOKEN=
